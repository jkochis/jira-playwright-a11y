# Jira Configuration (for API access)
JIRA_HOST=your-domain.atlassian.net
JIRA_EMAIL=your-email@example.com
JIRA_API_TOKEN=your-jira-api-token
JIRA_ISSUE_KEY=PROJ-123

# Test Configuration
TARGET_URL=https://example.com
HEADLESS=true
TIMEOUT=30000
INCLUDE_SCREENSHOTS=true
CONTEXT_DEPTH=3

# Jira File Path (alternative to Jira API)
# If provided, will parse a local markdown file instead of fetching from Jira API
JIRA_FILE_PATH=./example/jira.md

# MCP (Model Context Protocol) Configuration
USE_MCP=false
MCP_SERVER_URL=http://localhost:3000

# Axe Configuration
WCAG_LEVEL=AA
# AXE_RULES=["color-contrast","image-alt"]
# AXE_TAGS=["wcag2a","wcag2aa","wcag21a","wcag21aa"]

# LLM Configuration
USE_LLM=true
LLM_PROVIDER=openai
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=500

# Azure OpenAI Configuration (default provider)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_DEPLOYMENT=gpt-4

# Azure Claude Configuration (optional alternative)
AZURE_CLAUDE_ENDPOINT=https://your-claude-endpoint.azure.com
AZURE_CLAUDE_API_KEY=your-azure-claude-api-key
AZURE_CLAUDE_MODEL=claude-3-5-sonnet-20241022
